<section class='buddy-card text-center credential-format'>

  <div class='buddy-card container text-center'></div>
  <div class='buddy-card container text-center'></div>

  <form>
    <div>
      <section id='error-warning'></section>
      <label>Username:</label>
      <input id='user-create' type='text' name='name' />
      <label>Password</label>

      <input
        data-bs-toggle='tooltip'
        data-bs-title='Password must be at least 8 characters in length'
        id='password-create'
        type='password'
        name='password'
      />
      <button id='create-account' class='btn btn-primary btn-grad'>Create
        Account</button>
    </div>
  </form>

  <div class='buddy-card container text-left'></div>
  <div class='buddy-card container text-right'></div>

  <form>
    <div>
      <label>Username:</label>
      <input id='username' type='text' name='name' />
      <label>Password</label>
      <input id='password' type='password' name='password' />
      <button id='profile-login' class='btn btn-primary btn-grad'>Go to Profile</button>
    </div>
  </form>

  <div class='buddy-card container text-left'></div>
  <div class='buddy-card container text-right'></div>

</section>

{{#section 'script'}}
  <script src='/js/login.js'></script>
{{/section}}