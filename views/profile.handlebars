{{#section 'style'}}
  <link
    rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css'
  />
  <link
    rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'
  />
{{/section}}

<article class='container'>
  <section class='row buddy-card text-center'>
    <h2>User {{userData.username}}'s Profile</h2>
  </section>
  <section class='row buddy-card'>
    <form id='add-schedule'>
      <fieldset>
        <legend><h2>Add a date to your available schedule</h2></legend>
        <table>
          <div class='row'>
            <div class='col-5'>
              <div class='input-group date' id='date-picker'>
                <input
                  type='text'
                  class='form-control'
                  value='01/02/2023'
                  id='date'
                />
                <span class='input-group-append'>
                  <span class='input-group-text bg-light d-block'>
                    <i class='fa fa-calendar'></i>
                  </span>
                </span>
              </div>
            </div>
          </div>
          <tr>
            <input
              type='time'
              class='form-control'
              id='time'
              value='00:00'
            />
          </tr>
          <tr>
            <td colspan='2'><input type='submit' id='submitButton' /></td>
          </tr>
        </table>
      </fieldset>
    </form>
  </section>
  <section class='row buddy-card'>
    <h2 class='text-center'><u>Your available times</u></h2>
    <ul class='schedule container'>
      {{#each scheduleData}}
        <li class='buddy-card'>
          <h3>Date: {{date}}</h3>
          <h3>Time: {{time}}</h3>
        </li>
      {{/each}}
    </ul>
  </section>
</article>

{{#section 'script'}}
  <script
    src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js'
  ></script>
  <script
    src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js'
  ></script>
  <script
    src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js'
  ></script>
  <script src='/js/profile.js'></script>
{{/section}}