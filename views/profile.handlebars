{{#section 'style'}}
  <link
    rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css'
  />
  <link
    rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'
  />
{{/section}}

<article class='container'>
  <section class='row buddy-card text-center'>
    <h2>User {{userData.username}}'s Profile</h2>
  </section>
  {{#if ownProfile}}
    <article class='row container m-0'>
      <section class='buddy-card col'>
        <h3>Add a date/time to your available schedule</h3>
        <p>Use the calender and time picker to add a date/time to your
          availability so other users can know when you are available</p>
      </section>
      <section class='buddy-card col'>
        <form id='add-schedule'>
          <fieldset>
            <table>
              <tr>
                <div class='input-group date' id='date-picker'>
                  <input
                    type='text'
                    class='form-control'
                    value='01/02/2023'
                    id='date'
                  />
                  <span class='input-group-append'>
                    <span class='input-group-text bg-light d-block'>
                      <i class='fa fa-calendar'></i>
                    </span>
                  </span>
                </div>
              </tr>
              <tr>
                <input
                  type='time'
                  class='form-control'
                  id='time'
                  value='00:00'
                />
              </tr>
              <tr>
                <td><input
                    type='submit'
                    id='submitButton'
                    class='btn btn-grad'
                  /></td>
              </tr>
            </table>
          </fieldset>
        </form>
      </section>
    </article>
  {{/if}}
  <article class='row buddy-card'>
    <h2 class='text-center'><u>{{userData.username}}'s available times</u></h2>
    <ul class='schedule container'>
      {{#each scheduleData}}
        <li class='buddy-card schedule-slot'>
          <h3>{{date}}</h3>
          {{#if ownProfile}}
            <button data-id='{{id}}' class='btn btn-grad'>delete</button>
          {{/if}}
        </li>
      {{/each}}
    </ul>
  </article>
</article>

{{#section 'script'}}
  <script
    src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js'
  ></script>
  <script
    src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js'
  ></script>
  <script
    src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js'
  ></script>
  <script
    src='https://cdnjs.cloudflare.com/ajax/libs/luxon/3.2.1/luxon.min.js'
    integrity='sha512-pyR2hpC7bLig9Ub4eUIOC/BAO4anpdt7jhpF4dfrPv+qIg+KWztdVjFPCRCsRaWVfUylUCvrrxqMFNrJBdQIjQ=='
    crossorigin='anonymous'
    referrerpolicy='no-referrer'
  ></script>
  <script src='/js/profile.js'></script>
{{/section}}